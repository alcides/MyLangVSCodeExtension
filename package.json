{
  "name": "vscode-mylang",
  "description": "A vscode extension and language server for MyLang",
  "author": "JÃ©rome Perrin",
  "license": "SEE LICENSE IN LICENSE.txt",
  "version": "0.5.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/perrinjerome/vscode-zc-buildout"
  },
  "publisher": "alcidesfonseca",
  "categories": [],
  "keywords": [
    "multi-root ready"
  ],
  "engines": {
    "vscode": "^1.43.0"
  },
  "activationEvents": [
    "onLanguage:mylang"
  ],
  "main": "./client/out/extension",
  "contributes": {
    "languages": [
      {
        "id": "mylang",
        "extensions": [
          ".mylang"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "scopeName": "source.mylang",
        "path": "./syntaxes/mylang.tmGrammar.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "MyLang configuration",
      "properties": {
        "mylang.python.executable": {
          "scope": "application",
          "type": "string",
          "default": "python3",
          "description": "Path of python installation to use language server. This needs to be python >= 3.6"
        },
        "mylang.language.server.arguments": {
          "scope": "application",
          "type": "array",
          "items": {
            "type": "string"
          },
          "examples": [
            []
          ],
          "description": "Command line arguments when lauching language server."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "build": "vsce",
    "watch": "tsc -b -w",
    "postinstall": "cd client && npm install && cd ..",
    "test": "bash -c 'CODE_TESTS_PATH=\"$(pwd)/client/out/test\" CODE_TESTS_WORKSPACE=\"$(pwd)/profiles/\" node \"$(pwd)/client/out/test/runTest\"'",
    "lint": "eslint . --ext .js,.ts",
    "lint-fix": "eslint . --ext .js,.ts --fix"
  },
  "devDependencies": {
    "@babel/core": "^7.6.4",
    "@babel/preset-env": "^7.6.3",
    "@babel/preset-typescript": "^7.6.0",
    "@types/mocha": "^8.0.0",
    "@types/node": "^12.12.0",
    "@types/sinon": "^9.0.4",
    "@typescript-eslint/eslint-plugin": "^2.3.3",
    "@typescript-eslint/parser": "^2.3.0",
    "eslint": "^6.4.0",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-prettier": "^3.1.1",
    "mocha": "^8.0.1",
    "prettier": "^1.18.2",
    "sinon": "^9.0.2",
    "tslint": "^5.16.0",
    "typescript": "^3.9.4",
    "vsce": "^1.77.0"
  }
}